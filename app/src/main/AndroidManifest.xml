<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.undoing">

    <application
        android:name=".UniteApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UNdoing">
        <activity android:name=".BookKeep"  android:windowSoftInputMode="adjustPan|stateHidden"></activity>
        <activity
            android:name=".BillActivity"
            android:label="@string/title_activity_bill"
            android:theme="@style/Theme.UNdoing.NoActionBar" />
        <activity android:name=".RecommendList" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>