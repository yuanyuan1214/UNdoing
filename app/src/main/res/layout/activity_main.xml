<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grass_degree_2"
    tools:context=".MainActivity">

    <com.app.undoing.extension.LGvideoview
        android:id="@+id/login_vv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"/>

    <include
        android:id="@+id/topbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_bar"/>

    <LinearLayout
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_52"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:letterSpacing="0.5"
            android:text="2021"
            android:textColor="@color/main_font"
            android:fontFamily="@font/post_no_bills_jaffna_medium"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="年"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:letterSpacing="0.5"
            android:text="6"
            android:textColor="@color/main_font"
            android:fontFamily="@font/post_no_bills_jaffna_medium"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="月"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:letterSpacing="0.5"
            android:text="6"
            android:textColor="@color/main_font"
            android:fontFamily="@font/post_no_bills_jaffna_medium"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="第"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:letterSpacing="0.5"
            android:text="27"
            android:textColor="@color/main_font"
            android:id="@+id/week"
            android:fontFamily="@font/post_no_bills_jaffna_medium"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="周"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical">

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/main_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="本周金额(¥)"
                android:textColor="@color/main_font"
                android:textSize="@dimen/sp_36"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_background"
                android:gravity="center"
                android:text="本周碳排放量(kgCO2eq)"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_36"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/main_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="节约"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_36"/>

                    <TextView
                        android:id="@+id/negative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:letterSpacing="0.1"
                        android:text="+0.0"
                        android:textColor="@color/main_font"
                        android:fontFamily="@font/post_no_bills_jaffna_medium"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="支出"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_36"/>

                    <TextView
                        android:id="@+id/positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:letterSpacing="0.1"
                        android:text="-0.0"
                        android:textColor="@color/main_red_text"
                        android:fontFamily="@font/post_no_bills_jaffna_medium"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/table_background"
                android:orientation="vertical"
                android:padding="@dimen/dp_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="积累"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_36"/>

                    <TextView
                        android:id="@+id/negative_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:letterSpacing="0.1"
                        android:text="+0.0"
                        android:textColor="@color/main_font"
                        android:fontFamily="@font/post_no_bills_jaffna_medium"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_30">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="消耗"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_36"/>

                    <TextView
                        android:id="@+id/positive_points"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:letterSpacing="0.1"
                        android:text="-0.0"
                        android:textColor="@color/main_red_text"
                        android:fontFamily="@font/post_no_bills_jaffna_medium"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_5"
            android:background="@color/main_background"/>
    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:id="@+id/bottombar"
    android:paddingBottom="@dimen/dp_30">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_weight="1">

    <ImageButton
        android:id="@+id/main_book"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:background="@drawable/ic_main_book"
        android:layout_marginBottom="@dimen/dp_20"/>
     <TextView
         android:layout_width="@dimen/dp_150"
         android:layout_height="@dimen/dp_50"
         android:text="账单"
         android:textColor="@color/white"
         android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/main_book_keep"
            android:layout_width="@dimen/dp_136"
            android:layout_height="@dimen/dp_180"
            android:background="@drawable/ic_book_keep"
            android:layout_marginBottom="@dimen/dp_20"/>
        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:text="记账"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/main_grass"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_85"
            android:background="@drawable/ic_main_grass"
            android:layout_marginBottom="@dimen/dp_20"/>
        <TextView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_50"
            android:text="种草"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>