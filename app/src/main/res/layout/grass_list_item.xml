<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grass_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/out_item_img"
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_160"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center"
            android:tint="@color/type_image_grass"></ImageView>
    </FrameLayout>

    <TextView
        android:id="@+id/item_type"
        android:layout_width="@dimen/dp_157"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/tab_gray"
        android:textSize="@dimen/sp_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/out_item_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="数码"></TextView>

    <ImageView
        android:id="@+id/item_degree"
        android:layout_width="@dimen/dp_274"
        android:layout_height="@dimen/dp_44"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_type"
        app:layout_constraintRight_toLeftOf="@id/grass_add"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/grass_add"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_48"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/grass_minus"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/grass_minus"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:layout_marginRight="@dimen/dp_51"
        android:src="@drawable/ic_minus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/grass_more"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/grass_more"
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_33"
        android:layout_marginRight="@dimen/dp_40"
        android:src="@drawable/ic_more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>